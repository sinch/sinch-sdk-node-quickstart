{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "lib": ["ES2022", "dom"],
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "pretty": true,
    "baseUrl": ".",
    "noEmit": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
